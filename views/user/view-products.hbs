 <section>
        <div class="container mt-5 " >
            <div class="row p-2" >
                {{#each products}}

                <div class="col-md-4 col-lg-3 col-sm-6 col-xs-* p-3 " >
                    <div class="card" style="width: 14rem; height: 24rem">
                        <img class="card-img-top" 
                            src="/product-images/{{this._id}}.jpg" 
                            alt="Card image cap" 
                            style="height: 12rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{this.Name}}</h5>
                            <p class="card-text">{{this.Description}}.</p>
                            <a href="/add-to-cart/{{this._id}}" method="post" class="btn btn-primary">Add to cart</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>


    </section>  